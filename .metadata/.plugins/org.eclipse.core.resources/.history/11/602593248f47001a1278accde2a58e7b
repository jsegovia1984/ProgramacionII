package MisImplementaciones.Dinamicas;

import Api.ColaTDA;

public class Cola implements ColaTDA {
	
	class Nodo {
		int d;
		Nodo sig;
	}
	Nodo primero,ultimo;
	int tam;
	
	public void inicializar() {
	primero=ultimo=null;
	tam=0;
	}

	public void acolar(int x) {
		Nodo nuevo = new Nodo();
		nuevo.d = x;
		
		if (primero==null) {
			primero=nuevo;
					}
		else if (tam==1)
		{
			primero.sig=nuevo;
		}
		else
		{
			ultimo.sig=nuevo;
		}
		ultimo=nuevo;
		tam++;

	}

	public void desacolar() {
		primero = primero.sig;
		tam--;
		if(this.colavacia()) {
			primero=null;
			ultimo=null;
			
		}
			

	}

	public boolean colavacia() {
		return tam==0;
	}

	public int primero() {
		return primero.d;
	}

}
